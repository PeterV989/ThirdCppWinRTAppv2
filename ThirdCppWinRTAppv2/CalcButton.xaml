<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ThirdCppWinRTAppv2.CalcButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThirdCppWinRTAppv2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Button x:Name="myButton" Click="myCalcButton_Click" Width="60">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{x:Bind TopText}" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="{x:Bind BottomText}" Foreground="Blue" HorizontalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
